<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%" height="44"
	xmlns:common="com.cleartext.ximpp.views.common.*">
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import com.cleartext.ximpp.events.PopUpEvent;
			import org.swizframework.Swiz;
			import com.cleartext.ximpp.events.UserAccountEvent;
			import com.cleartext.ximpp.events.BuddyEvent;
			import mx.binding.utils.ChangeWatcher;
			import mx.binding.utils.BindingUtils;
			import com.cleartext.ximpp.models.SettingsModel;
			import com.cleartext.ximpp.models.ApplicationModel;
			import com.cleartext.ximpp.models.valueObjects.Status;
			
			[Autowire]
			[Bindable]
			public var appModel:ApplicationModel;
			
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
			{
				super.updateDisplayList(unscaledWidth, unscaledHeight);
				
				var matr1:Matrix = new Matrix();
				matr1.createGradientBox(unscaledWidth, unscaledHeight, Math.PI/2, 0, 0);
				graphics.beginGradientFill(GradientType.LINEAR, [0x3e443f, 0x000000], [1, 1], [0x00, 0xFF], matr1);  
				graphics.drawRect(0, 0, unscaledWidth, unscaledHeight);
			}
			
		]]>
	</mx:Script>

	<mx:Image y="6" x="8" source="@Embed(source='com/cleartext/ximpp/assets/logo.png')" height="30"/>

	<mx:Button
		upIcon="@Embed(source='com/cleartext/ximpp/assets/help.png')"
		overIcon="@Embed(source='com/cleartext/ximpp/assets/helpOver.png')"
		downIcon="@Embed(source='com/cleartext/ximpp/assets/help.png')"
		click="Alert.show('help me please', 'Help Menu');"
		skin="{null}"
		toolTip="help"
		right="75" y="8" />

	<mx:Button
		upIcon="@Embed(source='com/cleartext/ximpp/assets/settings.png')"
		overIcon="@Embed(source='com/cleartext/ximpp/assets/settingsOver.png')"
		downIcon="@Embed(source='com/cleartext/ximpp/assets/settings.png')"
		click="Swiz.dispatchEvent(new PopUpEvent(PopUpEvent.PREFERENCES_WINDOW));"
		skin="{null}"
		toolTip="preferences"
		right="45" y="8" />

	<mx:Button
		upIcon="@Embed(source='com/cleartext/ximpp/assets/console.png')"
		overIcon="@Embed(source='com/cleartext/ximpp/assets/consoleOver.png')"
		downIcon="@Embed(source='com/cleartext/ximpp/assets/console.png')"
		click="appModel.showConsole = !appModel.showConsole"
		skin="{null}"
		toolTip="toggleConsole"
		right="15" y="8" />

</mx:Canvas>
