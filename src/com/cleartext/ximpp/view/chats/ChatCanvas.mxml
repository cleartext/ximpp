<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:buddies="com.cleartext.ximpp.view.buddies.*"
	width="100%" height="100%"
	xmlns:common="com.cleartext.ximpp.view.common.*" 
	xmlns:containers="com.arc90.flexlib.containers.*"
	verticalGap="0">
	<mx:Script>
		<![CDATA[
			import com.cleartext.ximpp.model.XModel;
			
		]]>
	</mx:Script>
	
	<mx:TabBar>
		<mx:dataProvider>
			<mx:String>Friend 1</mx:String>
			<mx:String>Friend 2</mx:String>
			<mx:String>Friend 3</mx:String>
			<mx:String>Friend 4</mx:String>
		</mx:dataProvider>
	</mx:TabBar>
	
	<containers:CollapsiblePanel
		id="filterPanel"
		width="100%"
		title="Filter" 
		borderThicknessBottom="0" 
		borderThicknessLeft="0"
		borderThicknessRight="0" 
		collapseDuration="200"
		collapsed="true"
		verticalScrollPolicy="off"
		horizontalScrollPolicy="off"
		dropShadowEnabled="false"
		>
		<mx:Label text="item1"/>
		<mx:Label text="item2"/>
		<mx:Label text="item3"/>
	</containers:CollapsiblePanel> 

	<mx:VBox id="chatBox" 
		width="100%" height="100%">
		<mx:Label text="message 1"/>
		<mx:Label text="message 2"/>
		<mx:Label text="message 3"/>
		<mx:Label text="message 4"/>
	</mx:VBox>

	<mx:Canvas width="100%">
		<mx:Label text="gateway"
			x="7" y="3"/>
		<mx:ComboBox id="gatewayComboBox"
			x="60" y="0">
			<mx:dataProvider>
				<mx:String>gTalk</mx:String>
				<mx:String>msn</mx:String>
				<mx:String>cleartext</mx:String>
			</mx:dataProvider>
		</mx:ComboBox>
	</mx:Canvas>

	<mx:TextArea 
		id="messageTextArea"
		text="type message here"
		width="100%" height="45"/>

</mx:VBox>

